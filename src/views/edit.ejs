<h1>Editar Livro</h1>

<form action="/edit/<%= book._id %>" method="POST">
  <input type="hidden" name="_csrf" value="<%= csrfToken %>">
  <input type="text" name="titulo" value="<%= book.titulo %>" required>
  <input type="text" name="autor" value="<%= book.autor %>">
  <label>
    <input type="checkbox" name="disponivel" <%= book.disponivel ? 'checked' : '' %> > Dispon√≠vel
  </label>
  <button type="submit">Salvar</button>
</form>
